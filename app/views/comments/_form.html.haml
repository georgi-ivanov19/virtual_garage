%div.comment_wrapper
  = form_with model: @comment, url: comments_path do |f|
    - if @comment.errors.any?
      #error_explanation
        %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
        %ul
          - @comment.errors.full_messages.each do |message|
            %li= message

    = f.text_area :content, :placeholder => 'Enter a comment...', :class => 'form-control', :id => 'comment-field', :rows => '2', disabled: !user_signed_in?
    = f.hidden_field :car_id, value: params[:id]
    = f.submit 'Submit', class: 'btn', id: 'comment-submit-button', disabled: !user_signed_in?
