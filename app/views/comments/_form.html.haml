= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :content
    = f.text_area :content

  //= f.hidden_field :car_id, value: 13
  .field
    =f.label :car_id
    =f.text_area :car_id

  .actions
    = f.submit 'Save'
